<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Auth0 Servlet Partner</display-name>
    <!-- Servlets -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.auth0.example.Logout</servlet-class>
        <init-param>
            <param-name>onLogoutRedirectTo</param-name>
            <param-value>/portal/home</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.auth0.example.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RedirectCallback</servlet-name>
        <servlet-class>com.auth0.Auth0ServletCallback</servlet-class>
        <init-param>
            <param-name>auth0.redirect_on_success</param-name>
            <param-value>/portal/home</param-value>
        </init-param>
        <init-param>
            <param-name>auth0.redirect_on_error</param-name>
            <param-value>/portal/home</param-value>
        </init-param>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/portal/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RedirectCallback</servlet-name>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>

    <!-- Filters -->
    <filter>
        <filter-name>BaseUrlFilter</filter-name>
        <filter-class>com.auth0.example.BaseUrlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>BaseUrlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/portal/home</location>
    </error-page>

    <!-- Auth0 Configuration -->
    <context-param>
        <param-name>auth0.client_id</param-name>
        <param-value>OI51x6D3WDsjSCZnoKmjuLXKyw2PvLsw</param-value>
    </context-param>

    <context-param>
        <param-name>auth0.client_secret</param-name>
        <param-value>eu4m98NL4Jla4o0Z8aTUeNJcaLkQQ8UCdQoFbwHneANzm-Mo8wD4V5vtJ_AKNbmg</param-value>
    </context-param>

    <context-param>
        <param-name>auth0.domain</param-name>
        <param-value>arcseldon.auth0.com</param-value>
    </context-param>

    <context-param>
        <param-name>auth0.connection</param-name>
        <param-value>MyMongoDB</param-value>
    </context-param>

    <context-param>
        <param-name>auth0.partnerLoginUrl</param-name>
        <param-value>http://app1.com:3099/partner</param-value>
    </context-param>

    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>log4j2.xml</param-value>
    </context-param>

</web-app>
